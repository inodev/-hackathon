		  			<label for="age" class="col-sm-2 control-label">
		  				Scale
	  				</label>
	  				<div class="col-sm-10">
	  					<select class="form-control">
	  						<option> Local scale </option>
	  						<option> Country scale </option>
	  						<option> Cosmic scale </option>
	  					</select>
	  				</div>
		  		</div>
		  		<button type="submit" class="btn btn-lg btn-default">
		  			Access to your Akashic Record
		  		</button>
		  	</form>
		  </div>
		</div>
	</div>
</div>

