	  					<input type="text" class="form-control"
	  						   id="name" placeholder="Your name">
	  				</div>
		  		</div>
		  		<div class="form-group">
		  			<label for="age" class="col-sm-2 control-label">
		  				Age
	  				</label>
	  				<div class="col-sm-10">
	  					<select class="form-control">
	  						<option> Unknown </option>
	  						<option> 10 - 20 </option>
	  						<option> 20 - 30 </option>
	  						<option> 30 - 50 </option>
