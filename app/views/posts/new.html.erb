<body style="background-image: url('/AR_top/top_bg.png'); background-size: cover">

<div class="container"
     style="background-image: url('/AR_TOP/top_titlebg.png');margin-top: 40px;">
	<div class="row">
		<img src="/AR_top/top_title.png"
		     style="margin: auto; display: inherit; padding-top: 20px;">
 	</div>
	<div class="row" style="padding-top: 20px;">
		<div class="col-sm-2"></div>
		<div class="col-sm-8">
		  	<form class="form-horizontal" action="/posts" method="post">
          <% if @post.errors.any? %>
              <ul>
              <% @post.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
              </ul>
          <% end %>

		  		<div class="form-group">
		  			<label for="name" class="col-sm-2 control-label"
		  			       style="color: white;">
		  				Name
	  				</label>
	  				<div class="col-sm-10">
	  					<input type="text" class="form-control"
	  						   id="name" placeholder="Your name" name="post[name]">
	  				</div>
		  		</div>
		  		<div class="form-group">
		  			<label for="age" class="col-sm-2 control-label"
		  			       style="color: white;">
		  				Age
	  				</label>
	  				<div class="col-sm-10">
	  					<select class="form-control" name="post[age]">
	  						<option value="other"> Unknown </option>
	  						<option value="10-20"> 10 - 20 </option>
	  						<option value="20-30"> 20 - 30 </option>
	  						<option value="30-50"> 30 - 50 </option>
	  					</select>
	  				</div>
		  		</div>
		  		<div class="form-group">
		  			<label for="age" class="col-sm-2 control-label"
		  			       style="color: white;">
		  				Scale
	  				</label>
	  				<div class="col-sm-10">
	  					<select class="form-control" name="post[scale]">
	  						<option value="s"> Local scale </option>
	  						<option value="m"> Country scale </option>
	  						<option value="l"> Cosmic scale </option>
	  					</select>
	  				</div>
		  		</div>
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
		  		<button 
		  		        style="padding: 0px; margin: auto; margin-top: 20px;
		  		         margin-left: 70px;">
		  		    <img src='/AR_top/top_btn.png'>
		  		</button>
		  	</form>
		  	</div>
			<div class="col-sm-2"></div>
		</div>
	</div>
</div>
</body>
